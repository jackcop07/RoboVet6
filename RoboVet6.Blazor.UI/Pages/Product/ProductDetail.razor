@page "/productdetail/{productId:int}"

<AuthorizeView>
    <Authorized>
    @if (Product == null)
    {
        <div class="progressBar">
            <h3>Loading product information</h3>
        </div>
        <MatProgressBar Indeterminate="true"></MatProgressBar>
    }
    else
    {
        <BSContainer>
            <BSRow>
                <BSCol XS="12">
                    <h1>Details for @Product.Name</h1>
                </BSCol>
            </BSRow>
            
            <BSRow>
                <BSCol XS="12">
                    <hr />
                </BSCol>
            </BSRow>

            <BSRow>
                <BSCol>
                    <a href="@($"productedit/{ProductId}")" class="btn btn-primary">
                        <i class="fas fa-edit" style="font-size: 2rem;"></i>
                    </a>
                </BSCol>
            </BSRow>

            <BSRow>
                <BSCol XS="12">
                    <hr />
                </BSCol>
            </BSRow>
            
            <MatPaper Elevation="6" Rounded="true" Class="matPaper">
                <BSRow>
                    <BSCol XS="12">
                        <h3>Product details</h3>
                    </BSCol>
                </BSRow>

                <BSRow>
                    <BSCol XS="6">
                        <MatStringField ReadOnly="true" Value="@Product.Name" Label="Name" FullWidth="true" Icon="pets" />
                    </BSCol>
                </BSRow>
                        
                <BSRow>
                    <BSCol XS="6">
                        <MatTextField TValue="decimal" ReadOnly="true" Value="@Product.PriceIncVat" Label="Price(inc. VAT)" FullWidth="true" Icon="person" />
                    </BSCol>

                    <BSCol XS="6">
                        <MatTextField TValue="decimal" ReadOnly="true" Value="@Product.PriceExcVat" Label="Price(exc. VAT)" FullWidth="true" Icon="person" />
                    </BSCol>
                </BSRow>
            </MatPaper>
        </BSContainer>
    }
    </Authorized>
    <NotAuthorized>
        <p>You must be logged in to see this page!</p>
    </NotAuthorized>
</AuthorizeView>
