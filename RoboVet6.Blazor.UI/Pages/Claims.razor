@page "/claims"

<AuthorizeView>
    <Authorized>
        <h2>Hello @context.User.Identity.Name, 
            here's a list of your claims:</h2>
        <ul>
            @foreach (var claim in context.User.Claims)
            {
                <li><b>@claim.Type</b>: @claim.Value</li>
            }
        </ul>
    </Authorized>
    <NotAuthorized>
        <p>You must log in to see your claims</p>
    </NotAuthorized>
</AuthorizeView>